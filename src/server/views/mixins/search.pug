mixin SearchBar(type, disabled=false)
  .search-bar
    input.search-input(
      type="text" 
      name="search"
      placeholder="Search..."
      hx-get=`/settings/${type}/search`
      hx-target="#records-container"
      hx-trigger="keyup delay:400ms"
      hx-include="this"
      hx-indicator=".search-indicator"
      disabled=disabled
    )
    svg.search-icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none")
      path(
        d="M21 21L16.65 16.65M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
      )
    .search-indicator
      svg.spinner(viewBox="0 0 24 24")
        circle(cx="12" cy="12" r="10")