.modal-dialog.modal-dialog-centered
  .modal-content(aria-readonly="true")
    .modal-header
      h5.modal-title
        = title
        span.badge.ms-2.bg-secondary.small Read Only
      button.modal-close-button(type='button' data-bs-dismiss='modal' aria-label='Close') Ã—
    .modal-body
      div(role="form" aria-label="Read only settings")
        each value, key in settings
          if typeof value === 'boolean'
            .settings-switch-wrapper
              span.settings-switch-label= key.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')
              label.settings-switch
                input(
                  type='checkbox'
                  name=key
                  checked=value
                  readonly
                  disabled
                  aria-readonly="true"
                )
                span.settings-slider.readonly
          else
            .settings-field
              label= key.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')
              input.settings-input.readonly(
                type=typeof value === 'number' ? 'number' : key.includes('token') || key.includes('password') ? 'password' : 'text'
                name=key
                value=value
                min=typeof value === 'number' ? '0' : null
                readonly
                disabled
                aria-readonly="true"
              )
    .modal-footer
      button#modal-cancel-button.modal-button(type='button' data-bs-dismiss='modal') Close
